{#
/**
 * @file
 * UI Patterns components menu.
 */
#}
{% if groups %}
  <div class="ui-patterns__menu">
    <h2 class="title">{{ 'Components'|t }}</h2>

    {% if groups|length > 1 %}
      {% for group_name, components in groups %}

        <details class="details">
          <summary class="details__summary">
            <h3 class="title title--menu">{{ group_name }}</h3>
          </summary>
          <ul class="menu menu--vertical">
            {% for component in components %}
              <li class="menu__item">
                <a class="menu__link" href="#{{ component.id }}">{{ component.name }}</a>
              </li>
            {% endfor %}
          </ul>
        </details>

      {% endfor %}

    {% else %}
      <ul class="menu menu--vertical">
        {% for component in components %}
          <li class="menu__item">
            <a class="menu__link" href="#{{ component.id }}">{{ component.name }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
{% endif %}
