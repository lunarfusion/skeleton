<div class="page page--default">

  <header role="banner" class="layout layout--header">
    <div class="container container--full">
      {{ page.header_top }}
      {{ page.header }}
      {{ page.header_bottom }}
    </div>
  </header>

  <main role="main" class="main">
    <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}

    {% if page.banner %}
      <div class="layout layout--banner">
        <div class="container container--full">
          {{ page.banner }}
        </div>
      </div>
    {% endif %}

    {% if page.content_top %}
      <div class="layout layout--content-top">
        <div class="container">
          {{ page.content_top }}
        </div>
      </div>
    {% endif %}

    <div class="layout layout--content-main">
      <div class="container">
        <div class="row row--wrap">

        {% if page.sidebar_first %}
          <aside class="col col--4" role="complementary">
            {{ page.sidebar_first }}
          </aside>
        {% endif %}

        {% if page.sidebar_first or  page.sidebar_second %}
          <div class="col col--8">
            {{ page.content }}
          </div>

        {% else %}
          <div class="col col--12">
            {{ page.content }}
          </div>
        {% endif %}

        {% if page.sidebar_second %}
          <aside class="col col--4" role="complementary">
            {{ page.sidebar_second }}
          </aside>
        {% endif %}
        </div> {# end row #}
      </div> {# end container #}
    </div> {# end content main #}

    {% if page.content_bottom %}
      <div class="layout layout--content-bottom">
        <div class="container">
          {{ page.content_bottom }}
        </div>
      </div>
    {% endif %}
  </main>

  {% if page.footer %}
    <footer role="contentinfo" class="layout layout--footer">

      {% if page.footer_top %}
      <div class="container container--full">
        {{ page.footer_top }}
      </div>
    {% endif %}

    {% if page.footer %}
      <div class="container">
        {{ page.footer }}
      </div>
    {% endif %}

    {% if page.footer_bottom %}
      <div class="container container--full">
        {{ page.footer_bottom }}
      </div>
    {% endif %}

  </footer>
  {% endif %}

</div>{# /.layout-container #}
