<div class="page page--feature">

  <header role="banner" class="layout layout--header">
    <div class="container container--full">
      {{ page.header_top }}
      {{ page.header }}
      {{ page.header_bottom }}
    </div>
  </header>

  <main role="main" class="main">
    <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}

    <div class="layout layout--banner">
      <div class="container container--full">
        {{ page.banner }}
      </div>
    </div>

    <div class="layout layout--content-top">
      <div class="container">
        {{ page.content_top }}
      </div>
    </div>

    {# Feature page is fullwidth - does not allow sidebars #}
    <div class="layout layout--content-main">
      {{ page.content }}
    </div> {# end content main #}

    <div class="layout layout--content-bottom">
      <div class="container container--full">
        {{ page.content_bottom }}
      </div>
    </div>
  </main>

  {% if page.footer %}
    <footer role="contentinfo" class="layout layout--footer">
      <div class="container container--full">
        {{ page.footer_top }}
      </div>

      <div class="container">
        {{ page.footer }}
      </div>

      <div class="container container--full">
        {{ page.footer_bottom }}
      </div>
    </footer>
  {% endif %}

</div>{# /.layout-container #}
