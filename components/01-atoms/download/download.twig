{%
  set classes = [
    'download',
    variant and variant != 'default' ? 'download--' ~ variant,
  ]
%}

{% set download_attributes = create_attribute() %}

<div{{ download_attributes.addClass(classes) }}>
  <span class="download__icon">
    {% if variant == 'pdf' %}
      <svg class="icon icon--M icon--file-icon" height="20" width="20" fill="currentColor" aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg">
        <use xlink:href="/themes/custom/skeleton/dist/icons/sprites/solid.svg#file-pdf" href="/themes/custom/skeleton/dist/icons/sprites/solid.svg#file-pdf"></use>
      </svg>

    {% elseif variant == 'zip' %}
      <svg class="icon icon--M icon--file-icon" height="20" width="20" fill="currentColor" aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg">
        <use xlink:href="/themes/custom/skeleton/dist/icons/sprites/solid.svg#file-zipper" href="/themes/custom/skeleton/dist/icons/sprites/solid.svg#file-zipper"></use>
      </svg>

    {% elseif variant == 'image' %}
      <svg class="icon icon--M icon--file-icon" height="20" width="20" fill="currentColor" aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg">
        <use xlink:href="/themes/custom/skeleton/dist/icons/sprites/solid.svg#file-image" href="/themes/custom/skeleton/dist/icons/sprites/solid.svg#file-image"></use>
      </svg>

      {% else %}
        <svg class="icon icon--M icon--file-icon" height="20" width="20" fill="currentColor" aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg">
          <use xlink:href="/themes/custom/skeleton/dist/icons/sprites/solid.svg#file" href="/themes/custom/skeleton/dist/icons/sprites/solid.svg#file"></use>
        </svg>
    {% endif %}
  </span>

  {% if label %}
    <span class="download__label">
      {% if url %}
        <a{{ attributes.setAttribute('href', url).addClass('link') }}>
      {% endif %}
        {{ label }}
      {% if url %}
        </a>
      {% endif %}
    </span>

    {% if size %}
      <span class="download__size">{{ size }}</span>
    {% endif %}

    {% if description %}
      <span class="download__description">{{ description }}</span>
    {% endif %}
  {% endif %}
</div>
