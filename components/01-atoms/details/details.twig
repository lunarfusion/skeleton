
{%
  set classes = [
    'details',
    variant and variant != 'default' ? 'details--' ~ variant,
    theme ? 'details--' ~ theme,
  ]
%}

<details{{ attributes .addClass(classes) }}>
  <summary class="details__summary">
    <span>{{ summary_text }}</span>
  </summary>

  <div class="details__content">
    {{ content }}
  </div>
</details>
