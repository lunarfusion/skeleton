{%
  set classes = [
    'link',
    variant and variant != 'default' ? 'link--' ~ variant,
    disabled and disabled == 'true' ? 'disabled',
  ]
%}

{% if url or attributes.href %}
    {% set attributes = attributes.setAttribute('href', url) %}
{% endif %}

<a{{ attributes.addClass(classes)}}
  {% if disabled %}disabled="disabled" aria-disabled="true"{% endif %}>
  {{ label }}
</a>
