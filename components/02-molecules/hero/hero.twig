{%
  set classes = [
    'hero',
    variant and variant != 'default' ? 'hero--' ~ variant,
    theme ? 'hero--' ~ theme,
    layout ? 'hero--' ~ layout,
    text_alignment ? 'hero--' ~ text_alignment,
  ]
%}

<div{{attributes.addClass(classes)}}>
  <div class="hero__content">
    <div class="hero__heading">
      {{ heading }}
    </div>

    <div class="hero__text">
      {{ text }}
    </div>
  </div>

  {% if image %}
    <div class="hero__image">
      {{ image }}
    </div>
  {% endif %}
</div>
