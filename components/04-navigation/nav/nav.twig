{%
  set classes = [
    'nav',
    variant and variant != 'default' ? 'nav--' ~ variant,
    layout ? 'nav--' ~ layout,
    collapsible and collapsible == 'true' ? 'nav--collapsible',
    main and main == 'true' ? 'nav--main',
  ]
%}

{% if items %}
  {% set menu_id = menu_id|default('main-menu-' ~ random()) %}
  <nav{{ attributes.addClass(classes).setAttribute('id',menu_id) }} role="navigation" aria-label="{{ menu_name }}">
      {% import _self as menus %}
      {% if collapsible %}
        {{ _self.menu_links_collapsible(items, attributes, 0, menu_id, collapsible) }}
      {% else %}
        {{ _self.menu_links(items, attributes, 0, menu_id) }}
      {% endif %}
  </nav>
{% endif %}


{% macro menu_links(items, attributes, menu_level, menu_id) %}
    {%
      set list_classes = [
      'nav__list',
      'nav__list--level-' ~ menu_level,
      ]
    %}

    {% set list_attributes = create_attribute() %}
    <ul{{ list_attributes.addClass(list_classes) }}>

      {% for item in items %}

      {%
        set item_classes = [
          'nav__item',
          'nav__item--level-' ~ menu_level,
          item.is_expanded ? 'nav__item--expanded',
          item.is_collapsed ? 'nav__item--collapsed',
          item.in_active_trail ? 'nav__item--active-trail',
          item.below ? 'nav__item--has-children' : '',
        ]
      %}

      <li class="{{- item_classes|join(' ')-}}">
        {% set item_attributes = item.attributes|default(create_attribute()) %}

        {% if item.url %}
          <a class="nav__link" {{ item_attributes.setAttribute('href', item.url) }}>
            <span>{{ item.title }}</span>
          </a>

        {% else %}
          <div class="nav__link">
            <span>{{ item.title }}</span>
          </div>
        {% endif %}

        {% if item.below %}

          {% if menu_level == 0 %}
            <div class="nav__subnav-wrapper">
              {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
            </div>
          {% else %}
            {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
          {% endif %}

        {% endif %}
      </li>
      {% endfor %}
    </ul>
{% endmacro %}



{% macro menu_links_collapsible(items, attributes, menu_level, menu_id, collapsible) %}
    {%
      set list_classes = [
        'nav__list',
        'nav__list--level-' ~ menu_level,
      ]
    %}

    {% set list_attributes = create_attribute() %}
    <ul{{ list_attributes.addClass(list_classes) }}>

      {% for item in items %}

      {%
        set item_classes = [
          'nav__item',
          'nav__item--level-' ~ menu_level,
          item.is_expanded ? 'nav__item--expanded',
          item.is_collapsed ? 'nav__item--collapsed',
          item.in_active_trail ? 'nav__item--active-trail',
          item.below ? 'nav__item--has-children' : '',
        ]
      %}

      <li class="{{- item_classes|join(' ')-}}">
        {% set item_attributes = item.attributes|default(create_attribute()) %}

        {% if item.url %}
          <a class="nav__link" {{ item_attributes.setAttribute('href', item.url) }}>
            <span>{{ item.title }}</span>
          </a>

        {% else %}
          <button class="nav__subnav-toggle" aria-expanded="false" type="button" {% if item.in_active_trail %} aria-current="true"{% endif %}>
            {{ item.title }}
          </button>
        {% endif %}

        {% if item.below %}

          {% if menu_level == 0 %}
            <div class="nav__subnav-wrapper">
              {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
            </div>
          {% else %}
            {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
          {% endif %}

        {% endif %}
      </li>
      {% endfor %}
    </ul>
{% endmacro %}
